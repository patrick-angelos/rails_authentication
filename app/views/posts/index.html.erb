<% if user_signed_in? %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete%>
  <br>
  <%= link_to "Create new post", new_post_path %>
<% else %>
  <%= link_to "Login", new_user_session_path %>
<% end %>
<br>
<h1>Posts</h1>
<% @posts.each do |post| %>

  <h2><%= post.title %>
    <% if user_signed_in? %>
      By: <%= post.user.username%>
      <br>
    <% end %>
  </h2>
  <%= post.body %>
  <br>
  <br>
<% end %>
